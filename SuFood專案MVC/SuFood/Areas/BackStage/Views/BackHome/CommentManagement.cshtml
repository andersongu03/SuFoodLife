@section Styles{
	<link href="~/css/model.css" rel="stylesheet" />
	<link href="~/css/commentmanagement.min.css" rel="stylesheet" />
}

<div class="CommentReview col-10 col-sm-12 col-md-10 col-xl-10">
	<div>
		<!-- head -->
		<div class="ordersreview">
			<h4>{{topic}}</h4>
		</div>
		<!-- 1.搜尋框，下拉選單-->
		<div class="wrap">
			<div class="searchBar">
				@*想用V-model連結*@
				<input class="search-bar form-control" type="search" name="search" id="search" placeholder="輸入查詢">
				@*<button class="search-btn" type="button"><i class='bx bx-search-alt-2'></i></button>*@
			</div>
		</div>
	</div>



	<!-- body-->
	<div>
		<table class="table table-striped table-hover">
			<thead>
				<tr class="table tr">
					<th scope="col">評論ID</th>
					<th scope="col">星數</th>
					<th scope="col">評論</th>
					<th scope="col">訂單編號</th>
					<th scope="col">編輯</th>
					<th scope="col">刪除</th>
				</tr>
			</thead>
			<tbody>
				<!--評論資料 -->
				<tr v-for="c in or" :key="c.ordersId">
					<td>
						<span>{{ c.reviewId}}</span>
					</td>
					<td>
						<span>{{ c.ratingStar}}</span>
					</td>
					<td>
						<span>{{ c.comment }}</span>
					</td>
					<td>
						<span>{{ c.ordersId }}</span>
					</td>
					<td>
						<button class="btn btn-success" data-bs-target="#editModal" @@click="">修改</button>
					</td>
					<td>
						<button class="btn btn-warning" @@click="DeleteComment(c.ordersId)" :id="c.ordersId">刪除</button>
					</td>
				</tr>
			</tbody>
		</table>

