                    </div>
                </div>
                <div class="swiper-pagination"></div>
            </div>
        </template>*@
	</div>
        <!-- ======= Contact Section ======= -->
        <section id="contact" class="contact">
            <div class="container" data-aos="fade-up">

                <div class="section-header">
                    <h2>了解更多資訊</h2>
                    <p>還有&nbsp疑問？ <span>聯繫我們</span></p>
                </div>

                <div class="mb-3">
                    <iframe style="border:0; width: 100%; height: 350px;"
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3614.8328380340427!2d121.51054522247613!3d25.03974636778248!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3442a90a8d497325%3A0x2876dc1b4d647f9!2z5Lit6I-v5rCR5ZyL57i957Wx5bqc!5e0!3m2!1szh-TW!2stw!4v1683546052722!5m2!1szh-TW!2stw"
                            frameborder="0" allowfullscreen></iframe>
                </div><!-- End Google Maps -->



            </div>
    </section><!-- End Contact Section -->

    </div><!-- End #main -->
