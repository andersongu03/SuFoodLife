@section Styles
    {

}

<div class="col-4" id="app">
    <div>
        <h2>變更密碼</h2>
    </div>
    <div class="user-password-block">
        <form id="form-reset-password" asp-controller="Members" asp-action="MemberChangePassword">
            <div class="text-danger fw-bold">
                @ViewBag.Success;
            </div>
            
            <div class="form row">
                <div class="col-4">
                    <label class="">請輸入舊密碼</label>
                </div>
                <div class="col-8">
                    <input class="form-control" type="password" name="Password">
                </div>
            </div>
            <div class="form row">
                <div class="col-4">
                    <label for="newpassword" class="">輸入新密碼</label>
                </div>
                <div class="col-8">
                    <input class="form-control" type="password" name="NewPassword" required>
                </div>
            </div>
            <div class="form row">
                <div class="col-4">
                    <label for="checkpassword" class="">確認新密碼</label>
                </div>
                <div class="col-8">
                    <input class="form-control" type="password" name="ComfirmNewPassword" required>
                </div>
            </div>
            <div class="form row">
                <div class="col">
                    <input type="submit" class="btn btn-primary" value="確定修改">
                </div>
            </div>
        </form>
    </div>
</div>
                    