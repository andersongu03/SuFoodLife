@model SuFood.ViewModel.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport"   
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Login</title>
    <!-- MDB icon -->
    <link rel="icon"
          href="~/前端登入畫面用到的/img/SlIfe-logo.svg"
          type="image/x-icon" />
    <!-- Font Awesome -->
    <link rel="stylesheet"
          href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" />
    <script src="https://kit.fontawesome.com/6c09e4a88d.js"
            crossorigin="anonymous"></script>
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" />
    <!-- MDB -->
    <link rel="stylesheet"
          href="~/前端登入畫面用到的/css/bootstrap-login-form.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/vue@2.7.14/dist/vue.js"></script>
</head>
<body>
    <!-- Start your project here-->
    <section class="vh-100" style="background-color: rgba(206, 18, 18, 0.5)">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem">

                        <div class="card-body p-5 text-center">
                            <h3 class="mb-3">
                                <img src="~/前端登入畫面用到的/img/SlIfe-logo.svg"
                                     alt="SlIfe-logo" />
                                <br /><b style="color: black">迎接蔬食人生吧！</b>
                            </h3>
                            <button class="btn btn-primary btn-lg btn-block" id=" homeBtn"
                                    type="submit"
                                    style="background-color: rgba(206, 18, 18, 0.9)"
                                    name="loginButton" onclick="window.location.href = '@Url.Action("Login", "User")'">
                                成功驗證回到<a asp-area="" asp-controller="User" asp-action="Login">首頁</a>
                            </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End your project here-->
    <!-- MDB -->
    <script type="text/javascript"
            src="~/前端登入畫面用到的/js/mdb.min.js"></script>

</body>
</html>

@section Scripts{
    <script>
        var app = new Vue({
            el: "#homeBtn",
            methods: {
                back2Login: function () {
                    window.location.href = '@Url.Action("Login", "User")';
                }
            }
        })
    </script>
}
